<resources>

	<!-- Base application theme. -->
	<style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
		<!-- Customize your theme here. -->
		<item name="windowActionBar">false</item>
		<item name="windowNoTitle">true</item>
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="colorAccent">@color/colorAccent</item>
		<item name="searchViewStyle">@style/MainSearchView</item>
	</style>

    <style name="Widget.BottomNavigationView"
        parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/montserrat_regular</item>
    </style>

	<style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Light">
		<item name="fontFamily">@font/montserrat_regular</item>
		<item name="android:layout_gravity">center</item>
		<item name="colorAccent">#001B36</item>
	</style>

    <style name="MainSearchView" parent="Widget.AppCompat.SearchView">
        <item name="searchHintIcon">@null</item>
    </style>

    <style name="WhiteAccent" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorAccent">#FFFFFF</item>
    </style>

    <style name="NotificationsSwitch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">#44DB5E</item>
        <item name="colorSwitchThumbNormal">#cc0000</item>
    </style>

	<style name="RatingBar" parent="Theme.AppCompat">
		<!--<item name="colorControlNormal">#FFFFFF</item>-->
		<item name="colorControlActivated">#FFC60E</item>
	</style>
</resources>
