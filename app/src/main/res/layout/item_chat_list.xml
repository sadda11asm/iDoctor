<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content">

	<com.google.android.material.card.MaterialCardView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		app:cardBackgroundColor="@color/colorPrimary"
		app:layout_constraintTop_toTopOf="parent"
		app:strokeColor="#000000"
		app:strokeWidth="0.5dp"
		tools:layout_editor_absoluteX="16dp">

		<androidx.constraintlayout.widget.ConstraintLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_margin="2dp"
			tools:layout_editor_absoluteX="16dp"
			tools:layout_editor_absoluteY="16dp">

			<TextView
				android:id="@+id/unreadCountView"
				android:layout_width="24dp"
				android:layout_height="24dp"
				android:layout_marginStart="8dp"
				android:layout_marginLeft="8dp"
				android:layout_marginTop="8dp"
				android:layout_marginEnd="8dp"
				android:layout_marginRight="8dp"
				android:layout_marginBottom="8dp"
				android:background="@drawable/rounded_circle"
				android:gravity="center_horizontal|center_vertical"
				android:padding="2dp"
				android:text="7"
				android:textColor="#FFFFFF"
				app:fontFamily="@font/blogger_sans_bold"
				app:layout_constraintBottom_toBottomOf="parent"
				app:layout_constraintEnd_toEndOf="@+id/time"
				app:layout_constraintHorizontal_bias="1.0"
				app:layout_constraintStart_toStartOf="@+id/time"
				app:layout_constraintTop_toBottomOf="@+id/time"
				app:layout_constraintVertical_bias="1.0" />

			<ImageView
				android:id="@+id/imageCountView"
				android:layout_width="50dp"
				android:layout_height="50dp"
				android:layout_marginStart="8dp"
				android:layout_marginLeft="8dp"
				android:layout_marginTop="8dp"
				android:layout_marginBottom="8dp"
				app:layout_constraintBottom_toBottomOf="parent"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toTopOf="parent" />

			<TextView
				android:id="@+id/chatNameView"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginStart="8dp"
				android:layout_marginLeft="8dp"
				android:layout_marginTop="8dp"
				android:text="Saved Messages"
				android:textColor="@android:color/white"
				android:textSize="18sp"
				android:textStyle="bold"
				app:fontFamily="@font/blogger_sans_bold"
				app:layout_constraintStart_toEndOf="@id/imageCountView"
				app:layout_constraintTop_toTopOf="parent" />


			<TextView
				android:id="@+id/lastMessageView"
				android:layout_width="wrap_content"
				android:layout_height="23dp"
				android:layout_marginStart="8dp"
				android:layout_marginLeft="8dp"
				android:layout_marginTop="8dp"
				android:layout_marginBottom="4dp"
				android:text="You: Салам, как дела?"
				android:textColor="#D3D3D3"
				android:textStyle="bold"
				app:fontFamily="@font/blogger_sans"
				app:layout_constraintBottom_toBottomOf="parent"
				app:layout_constraintStart_toEndOf="@id/imageCountView"
				app:layout_constraintTop_toBottomOf="@+id/chatNameView" />

			<TextView
				android:id="@+id/time"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginStart="8dp"
				android:layout_marginLeft="8dp"
				android:layout_marginTop="8dp"
				android:layout_marginEnd="8dp"
				android:layout_marginRight="8dp"
				android:text="13:36"
				android:textColor="#D3D3D3"
				app:fontFamily="@font/blogger_sans"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintHorizontal_bias="1.0"
				app:layout_constraintStart_toEndOf="@+id/chatNameView"
				app:layout_constraintTop_toTopOf="parent" />

		</androidx.constraintlayout.widget.ConstraintLayout>
	</com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>