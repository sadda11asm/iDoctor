<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools">

	<data>

		<variable
			name="doctor"
			type="com.example.mppapp.model.DoctorO" />
	</data>

	<androidx.constraintlayout.widget.ConstraintLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent">

		<com.google.android.material.floatingactionbutton.FloatingActionButton
			android:id="@+id/startChat"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginStart="16dp"
			android:layout_marginLeft="16dp"
			android:layout_marginBottom="16dp"
			android:clickable="true"
			app:backgroundTint="#1F8EFA"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:srcCompat="@drawable/mail" />


		<com.google.android.material.floatingactionbutton.FloatingActionButton
			android:id="@+id/call"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginEnd="16dp"
			android:layout_marginRight="16dp"
			android:layout_marginBottom="16dp"
			android:clickable="true"
			app:backgroundTint="#06D09E"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:srcCompat="@drawable/pjone" />

		<androidx.core.widget.NestedScrollView
			android:id="@+id/scrollView2"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:fillViewport="true"
			tools:layout_editor_absoluteX="0dp"
			tools:layout_editor_absoluteY="-92dp">

			<androidx.constraintlayout.widget.ConstraintLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				tools:context=".ui.doctor_page.DoctorDetailsActivity">

				<TextView
					android:id="@+id/rating_text2"
					android:layout_width="wrap_content"
					android:layout_height="19dp"
					android:layout_marginEnd="16dp"
					android:layout_marginRight="16dp"
					android:text="@{doctor.ratingText}"
					app:fontFamily="@font/montserrat_regular"
					app:layout_constraintBottom_toBottomOf="@+id/rating_doctor_detail"
					app:layout_constraintEnd_toStartOf="@+id/rating_text"
					app:layout_constraintTop_toTopOf="@+id/rating_doctor_detail"
					app:layout_constraintVertical_bias="0.0" />


				<TextView
					android:id="@+id/specializations_doctor_detail"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginStart="8dp"
					android:layout_marginLeft="8dp"
					android:layout_marginTop="24dp"
					android:layout_marginEnd="8dp"
					android:layout_marginRight="8dp"
					android:foregroundGravity="center_horizontal"
					android:gravity="center_horizontal"
					android:text="@{doctor.specializations}"
					android:textColor="#919BAB"
					android:textSize="16sp"
					android:textStyle="bold"
					app:fontFamily="@font/montserrat_regular"
					app:layout_constraintEnd_toEndOf="parent"
					app:layout_constraintStart_toStartOf="parent"
					app:layout_constraintTop_toBottomOf="@+id/rating_doctor_detail" />

				<de.hdodenhof.circleimageview.CircleImageView
					android:id="@+id/icon__doctor_detail"
					android:layout_width="129dp"
					android:layout_height="123dp"
					android:layout_marginStart="8dp"
					android:layout_marginLeft="8dp"
					android:layout_marginTop="24dp"
					android:layout_marginEnd="8dp"
					android:layout_marginRight="8dp"
					app:layout_constraintEnd_toEndOf="parent"
					app:layout_constraintHorizontal_bias="0.498"
					app:layout_constraintStart_toStartOf="parent"
					app:layout_constraintTop_toTopOf="parent" />

				<RatingBar
					android:id="@+id/rating_doctor_detail"
					style="?android:attr/ratingBarStyleSmall"
					android:layout_width="wrap_content"
					android:layout_height="19dp"
					android:layout_marginTop="16dp"
					android:layout_marginEnd="16dp"
					android:layout_marginRight="16dp"
					android:numStars="5"
					android:rating="@{doctor.rating}"
					app:layout_constraintEnd_toStartOf="@+id/rating_text2"
					app:layout_constraintTop_toBottomOf="@+id/name_doctor_detail" />

				<TextView
					android:id="@+id/reviews_doctor_detail"
					android:layout_width="wrap_content"
					android:layout_height="19dp"
					android:layout_marginStart="16dp"
					android:layout_marginLeft="16dp"
					android:text="@{doctor.numReviews}"
					app:fontFamily="@font/montserrat_regular"
					app:layout_constraintBottom_toBottomOf="@+id/rating_doctor_detail"
					app:layout_constraintStart_toEndOf="@+id/rating_text"
					app:layout_constraintTop_toTopOf="@+id/rating_doctor_detail"
					app:layout_constraintVertical_bias="0.0" />

				<TextView
					android:id="@+id/name_doctor_detail"
					android:layout_width="350dp"
					android:layout_height="wrap_content"
					android:layout_marginStart="8dp"
					android:layout_marginLeft="8dp"
					android:layout_marginTop="12dp"
					android:layout_marginEnd="8dp"
					android:layout_marginRight="8dp"
					android:gravity="center_horizontal"
					android:text="@{doctor.name}"
					android:textColor="#162C47"
					android:textSize="18sp"
					android:textStyle="bold"
					app:fontFamily="@font/montserrat_regular"
					app:layout_constraintEnd_toEndOf="parent"
					app:layout_constraintStart_toStartOf="parent"
					app:layout_constraintTop_toBottomOf="@+id/icon__doctor_detail" />

				<TextView
					android:id="@+id/rating_text"
					android:layout_width="wrap_content"
					android:layout_height="19dp"
					android:layout_marginEnd="8dp"
					android:layout_marginRight="8dp"
					android:text="|"
					app:fontFamily="@font/montserrat_regular"
					app:layout_constraintBottom_toBottomOf="@+id/rating_doctor_detail"
					app:layout_constraintEnd_toEndOf="@+id/name_doctor_detail"
					app:layout_constraintStart_toStartOf="@+id/name_doctor_detail"
					app:layout_constraintTop_toTopOf="@+id/rating_doctor_detail"
					app:layout_constraintVertical_bias="0.0" />


				<LinearLayout
					android:id="@+id/layout"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_marginTop="24dp"
					app:layout_constraintEnd_toEndOf="parent"
					app:layout_constraintStart_toStartOf="parent"
					app:layout_constraintTop_toBottomOf="@+id/specializations_doctor_detail">

					<TextView
						android:id="@+id/qualification"
						android:layout_width="0dp"
						android:layout_height="29dp"
						android:layout_marginLeft="20dp"
						android:layout_marginRight="20dp"
						android:layout_weight="1.0"
						android:background="@drawable/rounded_textview"
						android:gravity="center_horizontal|center_vertical"
						android:text="@{doctor.qualification}"
						android:textColor="#E77C6E"
						app:fontFamily="@font/montserrat_regular" />

					<TextView
						android:id="@+id/experience_doctor_detail"
						android:layout_width="0dp"
						android:layout_height="29dp"
						android:layout_marginLeft="20dp"
						android:layout_marginRight="20dp"
						android:layout_weight="1.0"
						android:background="@drawable/rounded_textview2"
						android:gravity="center_horizontal|center_vertical"
						android:text="@{doctor.experience}"
						android:textColor="#4C1199"
						app:fontFamily="@font/montserrat_regular" />

				</LinearLayout>

				<com.google.android.material.tabs.TabLayout
					android:id="@+id/tabLayout"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="16dp"
					app:layout_constraintTop_toBottomOf="@+id/layout"
					app:tabTextAppearance="@style/AppTabTextAppearance" />


				<view
					android:id="@+id/doctor_info_container"
					class="com.example.mppapp.util.WrapContentViewPager"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginBottom="8dp"
					app:layout_constraintBottom_toBottomOf="parent"
					app:layout_constraintEnd_toEndOf="parent"
					app:layout_constraintTop_toBottomOf="@+id/tabLayout"
					app:layout_constraintVertical_bias="0.0" />

				<!--<androidx.viewpager.widget.ViewPager-->
				<!--android:layout_width="match_parent"-->
				<!--android:layout_height="wrap_content"-->
				<!--android:layout_marginBottom="8dp"-->
				<!--app:layout_constraintBottom_toBottomOf="parent"-->
				<!--app:layout_constraintEnd_toEndOf="parent"-->
				<!--app:layout_constraintTop_toBottomOf="@+id/tabLayout">-->

				<!--</androidx.viewpager.widget.ViewPager>-->

			</androidx.constraintlayout.widget.ConstraintLayout>
		</androidx.core.widget.NestedScrollView>

	</androidx.constraintlayout.widget.ConstraintLayout>
</layout>
