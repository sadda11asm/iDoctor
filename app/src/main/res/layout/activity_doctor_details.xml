<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools">

	<data>

		<variable
			name="doctor"
			type="com.example.mppapp.model.DoctorO" />
	</data>

	<androidx.core.widget.NestedScrollView
		android:id="@+id/scrollView2"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:fillViewport="true">

		<androidx.constraintlayout.widget.ConstraintLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			tools:context=".ui.doctor_page.DoctorDetailsActivity">

			<com.google.android.material.floatingactionbutton.FloatingActionButton
				android:id="@+id/call"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginEnd="16dp"
				android:layout_marginRight="16dp"
				android:layout_marginBottom="16dp"
				android:clickable="true"
				app:backgroundTint="#06D09E"
				app:layout_constraintBottom_toBottomOf="parent"
				app:layout_constraintEnd_toEndOf="parent"
				app:srcCompat="@drawable/pjone" />

			<TextView
				android:id="@+id/experience_doctor_detail"
				android:layout_width="wrap_content"
				android:layout_height="19dp"
				android:layout_marginStart="8dp"
				android:layout_marginLeft="8dp"
				android:layout_marginTop="16dp"
				android:layout_marginEnd="84dp"
				android:layout_marginRight="84dp"
				android:text="@{doctor.experience}"
				android:textColor="#162C47"
				app:fontFamily="@font/blogger_sans"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintHorizontal_bias="0.716"
				app:layout_constraintStart_toEndOf="@+id/qualification"
				app:layout_constraintTop_toBottomOf="@+id/specializations_doctor_detail" />

			<TextView
				android:id="@+id/specializations_doctor_detail"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginStart="8dp"
				android:layout_marginLeft="8dp"
				android:layout_marginTop="24dp"
				android:layout_marginEnd="8dp"
				android:layout_marginRight="8dp"
				android:foregroundGravity="center_horizontal"
				android:gravity="center_horizontal"
				android:text="@{doctor.specializations}"
				android:textColor="#6D7F9B"
				android:textSize="16sp"
				android:textStyle="bold"
				app:fontFamily="@font/blogger_sans"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toBottomOf="@+id/rating_doctor_detail" />

			<ImageView
				android:id="@+id/icon__doctor_detail"
				android:layout_width="129dp"
				android:layout_height="123dp"
				android:layout_marginStart="8dp"
				android:layout_marginLeft="8dp"
				android:layout_marginTop="24dp"
				android:layout_marginEnd="8dp"
				android:layout_marginRight="8dp"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintHorizontal_bias="0.498"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toTopOf="parent"
				tools:srcCompat="@tools:sample/avatars" />

			<RatingBar
				android:id="@+id/rating_doctor_detail"
				style="?android:attr/ratingBarStyleSmall"
				android:layout_width="wrap_content"
				android:layout_height="19dp"
				android:layout_marginStart="76dp"
				android:layout_marginLeft="76dp"
				android:layout_marginTop="16dp"
				android:numStars="5"
				android:rating="@{doctor.rating}"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toBottomOf="@+id/name_doctor_detail" />

			<TextView
				android:id="@+id/reviews_doctor_detail"
				android:layout_width="wrap_content"
				android:layout_height="19dp"
				android:layout_marginEnd="99dp"
				android:text="@{doctor.numReviews}"
				app:fontFamily="@font/blogger_sans"
				app:layout_constraintBottom_toBottomOf="@+id/rating_doctor_detail"
				app:layout_constraintEnd_toEndOf="@+id/name_doctor_detail"
				app:layout_constraintTop_toTopOf="@+id/rating_doctor_detail"
				app:layout_constraintVertical_bias="0.0" />

			<TextView
				android:id="@+id/name_doctor_detail"
				android:layout_width="350dp"
				android:layout_height="wrap_content"
				android:layout_marginStart="8dp"
				android:layout_marginLeft="8dp"
				android:layout_marginTop="16dp"
				android:layout_marginEnd="8dp"
				android:layout_marginRight="8dp"
				android:gravity="center_horizontal"
				android:text="@{doctor.name}"
				android:textColor="#162C47"
				android:textSize="18sp"
				android:textStyle="bold"
				app:fontFamily="@font/blogger_sans"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintHorizontal_bias="0.498"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toBottomOf="@+id/icon__doctor_detail" />

			<TextView
				android:id="@+id/rating_text"
				android:layout_width="wrap_content"
				android:layout_height="19dp"
				android:layout_marginStart="12dp"
				android:layout_marginLeft="12dp"
				android:text="@{doctor.ratingText}"
				app:fontFamily="@font/blogger_sans"
				app:layout_constraintBottom_toBottomOf="@+id/rating_doctor_detail"
				app:layout_constraintStart_toEndOf="@+id/rating_doctor_detail"
				app:layout_constraintTop_toTopOf="@+id/rating_doctor_detail"
				app:layout_constraintVertical_bias="0.0" />

			<TextView
				android:id="@+id/qualification"
				android:layout_width="155dp"
				android:layout_height="19dp"
				android:layout_marginStart="8dp"
				android:layout_marginLeft="8dp"
				android:layout_marginTop="16dp"
				android:layout_marginEnd="216dp"
				android:layout_marginRight="216dp"
				android:text="@{doctor.qualification}"
				android:textColor="#162C47"
				app:fontFamily="@font/blogger_sans"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintHorizontal_bias="1.0"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toBottomOf="@+id/specializations_doctor_detail" />

			<com.google.android.material.tabs.TabLayout
				android:id="@+id/tabLayout"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				app:layout_constraintTop_toBottomOf="@+id/experience_doctor_detail" />

			<com.google.android.material.floatingactionbutton.FloatingActionButton
				android:id="@+id/startChat"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginStart="8dp"
				android:layout_marginLeft="8dp"
				android:layout_marginBottom="16dp"
				android:clickable="true"
				app:backgroundTint="#1F8EFA"
				app:layout_constraintBottom_toBottomOf="parent"
				app:layout_constraintStart_toStartOf="parent"
				app:srcCompat="@drawable/mail" />

			<view
				android:id="@+id/doctor_info_container"
				class="com.example.mppapp.util.WrapContentViewPager"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="8dp"
				app:layout_constraintBottom_toBottomOf="parent"
				app:layout_constraintTop_toBottomOf="@+id/tabLayout"
				app:layout_constraintVertical_bias="0.0"
				tools:layout_editor_absoluteX="16dp" />

			<!--<androidx.viewpager.widget.ViewPager-->
				<!--android:layout_width="match_parent"-->
				<!--android:layout_height="wrap_content"-->
				<!--android:layout_marginBottom="8dp"-->
				<!--app:layout_constraintBottom_toBottomOf="parent"-->
				<!--app:layout_constraintEnd_toEndOf="parent"-->
				<!--app:layout_constraintTop_toBottomOf="@+id/tabLayout">-->

			<!--</androidx.viewpager.widget.ViewPager>-->

		</androidx.constraintlayout.widget.ConstraintLayout>
	</androidx.core.widget.NestedScrollView>
</layout>
