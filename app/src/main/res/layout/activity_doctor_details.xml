<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools">

	<data>

		<variable
			name="doctor"
			type="com.example.mppapp.model.DoctorO" />
	</data>

	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="match_parent">

		<androidx.constraintlayout.widget.ConstraintLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			tools:context=".ui.doctor_page.DoctorDetailsActivity">

			<TextView
				android:id="@+id/illnesses_doctor_detail"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_marginStart="8dp"
				android:layout_marginTop="12dp"
				android:layout_marginEnd="8dp"
				android:paddingLeft="32dp"
				android:text="@{doctor.getIllnesses}"
				android:textColor="#162C47"
				app:fontFamily="@font/blogger_sans"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toBottomOf="@+id/imageView6" />

			<ImageView
				android:id="@+id/imageView6"
				android:layout_width="30dp"
				android:layout_height="30dp"
				android:layout_marginStart="32dp"
				android:layout_marginLeft="32dp"
				android:layout_marginTop="8dp"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toBottomOf="@+id/details_doctor_detail"
				app:srcCompat="@drawable/nurse" />

			<TextView
				android:id="@+id/illness"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginStart="8dp"
				android:layout_marginLeft="8dp"
				android:text="Болезни"
				android:textColor="#162C47"
				android:textSize="16sp"
				app:fontFamily="@font/blogger_sans_bold"
				app:layout_constraintBottom_toBottomOf="@+id/imageView6"
				app:layout_constraintStart_toEndOf="@+id/imageView6"
				app:layout_constraintTop_toTopOf="@+id/imageView6"
				app:layout_constraintVertical_bias="0.583" />

			<ImageView
				android:id="@+id/imageView5"
				android:layout_width="30dp"
				android:layout_height="30dp"
				android:layout_marginStart="32dp"
				android:layout_marginLeft="32dp"
				android:layout_marginTop="40dp"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toBottomOf="@+id/image_exp"
				app:srcCompat="@drawable/information" />

			<TextView
				android:id="@+id/phone_doctor_detail"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginStart="8dp"
				android:layout_marginLeft="8dp"
				android:layout_marginEnd="8dp"
				android:layout_marginRight="8dp"
				android:text="@{doctor.handledPhone}"
				android:textColor="#162C47"
				app:fontFamily="@font/blogger_sans"
				app:layout_constraintBottom_toBottomOf="@+id/image_phone"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintHorizontal_bias="0.25"
				app:layout_constraintStart_toEndOf="@+id/image_phone"
				app:layout_constraintTop_toTopOf="@+id/image_phone" />

			<ImageView
				android:id="@+id/image_phone"
				android:layout_width="30dp"
				android:layout_height="30dp"
				android:layout_marginStart="28dp"
				android:layout_marginLeft="24dp"
				app:layout_constraintBottom_toBottomOf="@+id/image_exp"
				app:layout_constraintStart_toEndOf="@+id/city_doctor_detail"
				app:layout_constraintTop_toTopOf="@+id/image_exp"
				app:layout_constraintVertical_bias="0.0"
				app:srcCompat="@drawable/pjone" />

			<TextView
				android:id="@+id/experience_doctor_detail"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginStart="8dp"
				android:layout_marginLeft="8dp"
				android:text="@{doctor.experience}"
				android:textColor="#162C47"
				app:fontFamily="@font/blogger_sans"
				app:layout_constraintBottom_toBottomOf="@+id/image_exp"
				app:layout_constraintStart_toEndOf="@+id/image_exp"
				app:layout_constraintTop_toTopOf="@+id/image_exp" />

			<TextView
				android:id="@+id/specializations_doctor_detail"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginStart="8dp"
				android:layout_marginLeft="8dp"
				android:layout_marginEnd="8dp"
				android:layout_marginRight="8dp"
				android:foregroundGravity="center_horizontal"
				android:gravity="center_horizontal"
				android:text="@{doctor.specializations}"
				android:textColor="#6D7F9B"
				android:textSize="12sp"
				android:textStyle="bold"
				app:fontFamily="@font/blogger_sans"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toBottomOf="@+id/name_doctor_detail" />

			<ImageView
				android:id="@+id/icon__doctor_detail"
				android:layout_width="100dp"
				android:layout_height="100dp"
				android:layout_marginStart="8dp"
				android:layout_marginLeft="8dp"
				android:layout_marginTop="24dp"
				android:layout_marginEnd="8dp"
				android:layout_marginRight="8dp"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintHorizontal_bias="0.498"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toTopOf="parent"
				tools:srcCompat="@tools:sample/avatars" />

			<RatingBar
				android:id="@+id/rating_doctor_detail"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginStart="8dp"
				android:layout_marginLeft="8dp"
				android:layout_marginTop="8dp"
				android:layout_marginEnd="8dp"
				android:layout_marginRight="8dp"
				android:numStars="5"
				android:rating="@{doctor.rating}"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintHorizontal_bias="0.472"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toBottomOf="@+id/specializations_doctor_detail" />

			<TextView
				android:id="@+id/reviews_doctor_detail"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="8dp"
				android:layout_marginEnd="8dp"
				android:layout_marginRight="8dp"
				android:text="242 reviews"
				app:fontFamily="@font/blogger_sans"
				app:layout_constraintEnd_toEndOf="@+id/rating_doctor_detail"
				app:layout_constraintHorizontal_bias="0.551"
				app:layout_constraintStart_toStartOf="@+id/rating_doctor_detail"
				app:layout_constraintTop_toBottomOf="@+id/rating_doctor_detail" />

			<TextView
				android:id="@+id/name_doctor_detail"
				android:layout_width="0dp"
				android:layout_height="25dp"
				android:layout_marginStart="8dp"
				android:layout_marginLeft="8dp"
				android:layout_marginTop="8dp"
				android:layout_marginEnd="8dp"
				android:layout_marginRight="8dp"
				android:gravity="center_horizontal"
				android:text="@{doctor.name}"
				android:textColor="#162C47"
				android:textSize="18sp"
				android:textStyle="bold"
				app:fontFamily="@font/blogger_sans"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintHorizontal_bias="0.498"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toBottomOf="@+id/icon__doctor_detail" />

			<ImageView
				android:id="@+id/image_exp"
				android:layout_width="30dp"
				android:layout_height="30dp"
				android:layout_marginStart="32dp"
				android:layout_marginLeft="32dp"
				android:layout_marginTop="20dp"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toBottomOf="@+id/reviews_doctor_detail"
				app:srcCompat="@drawable/goal" />

			<TextView
				android:id="@+id/city_doctor_detail"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginStart="8dp"
				android:layout_marginLeft="8dp"
				android:text="@{doctor.city.name}"
				android:textColor="#162C47"
				app:fontFamily="@font/blogger_sans"
				app:layout_constraintBottom_toBottomOf="@+id/image_loc"
				app:layout_constraintStart_toEndOf="@+id/image_loc"
				app:layout_constraintTop_toTopOf="@+id/image_loc" />

			<ImageView
				android:id="@+id/image_loc"
				android:layout_width="30dp"
				android:layout_height="30dp"
				android:layout_marginStart="24dp"
				android:layout_marginLeft="24dp"
				app:layout_constraintBottom_toBottomOf="@+id/image_exp"
				app:layout_constraintStart_toEndOf="@+id/experience_doctor_detail"
				app:layout_constraintTop_toTopOf="@+id/image_exp"
				app:layout_constraintVertical_bias="0.0"
				app:srcCompat="@drawable/location" />

			<TextView
				android:id="@+id/textView5"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginStart="8dp"
				android:layout_marginLeft="8dp"
				android:text="Услуги"
				android:textColor="#162C47"
				android:textSize="16sp"
				app:fontFamily="@font/blogger_sans_bold"
				app:layout_constraintBottom_toBottomOf="@+id/imageView5"
				app:layout_constraintStart_toEndOf="@+id/imageView5"
				app:layout_constraintTop_toTopOf="@+id/imageView5" />

			<TextView
				android:id="@+id/details_doctor_detail"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_marginStart="8dp"
				android:layout_marginTop="12dp"
				android:layout_marginEnd="24dp"
				android:paddingLeft="32dp"
				android:text="@{doctor.parsedTreatmentText}"
				android:textColor="#162C47"
				app:fontFamily="@font/blogger_sans"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toBottomOf="@+id/imageView5" />

			<Button
				android:id="@+id/button"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_marginStart="36dp"
				android:layout_marginLeft="36dp"
				android:layout_marginTop="36dp"
				android:layout_marginEnd="36dp"
				android:layout_marginRight="36dp"
				android:text="Начать консультацию"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintHorizontal_bias="0.498"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toBottomOf="@+id/illnesses_doctor_detail" />

		</androidx.constraintlayout.widget.ConstraintLayout>
	</ScrollView>
</layout>
